<resources>

    <style name="BtnNavigate">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_navigate_height</item>
        <item name="android:background">@drawable/navigate_button_selector</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="InputText" parent="TextTitle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/bkg_stroke_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>

    <style name="TextTitle.ItemTitle" parent="TextTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ItemContent">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleTextureView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">70dp</item>
    </style>
</resources>
