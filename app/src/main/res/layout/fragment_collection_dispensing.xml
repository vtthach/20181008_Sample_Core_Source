<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sf0404.common.dialog.progresscircle.LoadingCircular
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            app:sf_loading_circular_auto_start="true" />

        <TextView
            android:id="@+id/txtDispensing"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sim_dispensing_sim" />

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/fragment_padding"
        android:visibility="invisible"
        tools:context=".StartActivity">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35">

            <ImageView
                android:id="@+id/imgSuccess"
                android:layout_width="270dp"
                android:layout_height="240dp"
                android:src="@drawable/checkbox_verify" />

            <TextView
                android:id="@+id/txtSuccessTitle"
                style="@style/TextTitle"
                android:layout_above="@+id/txtIccId"
                android:layout_toRightOf="@+id/imgSuccess"
                android:text="@string/sim_activation_success" />

            <TextView
                android:id="@+id/txtIccId"
                style="@style/TextTitle.ItemTitle"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/imgSuccess"
                android:paddingTop="10dp"
                android:text="@string/sim_iccid" />

            <TextView
                android:id="@+id/txtSimNo"
                style="@style/TextTitle.ItemTitle"
                android:layout_alignBaseline="@+id/txtIccId"
                android:layout_toRightOf="@+id/txtIccId"
                android:text="@string/sim_no" />

            <TextView
                android:id="@+id/txtMoreInfo"
                style="@style/ItemContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtIccId"
                android:layout_toRightOf="@+id/imgSuccess"
                android:text="@string/sim_more_info" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnExit"
            style="@style/BtnNavigate"
            android:text="@string/str_exit"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/btnScanAnotherSim"
            style="@style/BtnNavigate"
            android:layout_width="@dimen/btn_navigate_right_width"
            android:layout_marginRight="340dp"
            android:text="@string/str_scan_another_sim"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btnPrintSlip"
            style="@style/BtnNavigate"
            android:layout_width="@dimen/btn_navigate_right_width"
            android:text="@string/str_print_slip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ViewAnimator>