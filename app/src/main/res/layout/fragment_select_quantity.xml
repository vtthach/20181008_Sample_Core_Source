<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_rica_padding"
    tools:context=".StartActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <TextView
        android:id="@+id/selectQuantityTitle1"
        style="@style/TextTitle"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/select_quantity_title"
        android:textColor="@color/primary"
        android:textSize="@dimen/title_text_size_25"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectQuantityImg1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_sim_rain"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/selectQuantityTitle1" />

    <!--<Spinner
        android:id="@+id/itemSpinner"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/selectQuantityImg1" />-->
    <TextView
        android:id="@+id/itemSpinner"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="R50 once off"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/selectQuantityImg1" />

    <ImageView
        android:id="@+id/imgLine1"
        android:layout_width="@dimen/img_line_width"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_gray"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/itemSpinner" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/light_gray"
        android:text="SIM +10 data days"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/imgLine1"  />

    <TextView
        android:id="@+id/tv_name_desc"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/text_size_20"
        android:text="R50 a gip"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"  />

    <TextView
        android:id="@+id/tv_pay_at_end"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/light_gray"
        android:text="@string/pay_at_end"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_desc"  />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="524dp" />

    <TextView
        android:id="@+id/selectQuantityTitle2"
        style="@style/TextTitle"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="@string/select_quantity_title"
        android:textColor="@color/primary"
        android:textSize="@dimen/title_text_size_25"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/selectQuantityImg2"
        android:layout_width="@dimen/img_line_width"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/blue_rectangle"
        app:layout_constraintStart_toEndOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/selectQuantityTitle2">

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/oval"
            android:text=" - "
            android:textSize="@dimen/title_text_size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quantity"
            style="@style/TextTitle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/oval"
            android:text=" + "
            android:textSize="@dimen/title_text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_cart_summary"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:text="@string/cart_summary"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/selectQuantityImg2" />

    <ImageView
        android:id="@+id/imgLine2"
        android:layout_width="@dimen/img_line_width"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_gray"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tv_cart_summary" />

    <TextView
        android:id="@+id/tv_sub_total"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/light_gray"
        android:text="@string/sub_total"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/imgLine2"  />

    <TextView
        android:id="@+id/tv_sub_total_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/light_gray"
        android:text="@string/sub_total_item"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintTop_toBottomOf="@+id/imgLine2"
        app:layout_constraintStart_toEndOf="@+id/tv_sub_total"  />

    <TextView
        android:id="@+id/tv_price_R"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="15dp"
        android:gravity="end"
        android:text="R"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/imgLine2" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:gravity="end"
        android:text="50.0"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toEndOf="@+id/tv_price_R"
        app:layout_constraintTop_toBottomOf="@+id/imgLine2" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/primary"
        android:text="@string/total"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_total"  />

    <TextView
        android:id="@+id/tv_total_price_R"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:layout_marginTop="15dp"
        android:gravity="end"
        android:text="R"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_R" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:gravity="end"
        android:text="50.0"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toEndOf="@+id/tv_total_price_R"
        app:layout_constraintTop_toBottomOf="@+id/tv_price" />

    <ImageView
        android:id="@+id/imgLine3"
        android:layout_width="@dimen/img_line_width"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_gray"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_price" />

    <Button
        android:id="@+id/btnExitQuantity"
        style="@style/BtnNavigate"
        android:text="@string/str_exit"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_at_end"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnProceedQuantity"
        style="@style/BtnNavigate"
        android:layout_width="@dimen/btn_navigate_right_width"
        android:enabled="false"
        android:text="@string/str_proceed_to_rica"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLine3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>