<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#fff"
    app:contentPadding="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    tools:showIn="@layout/collection_order_list_fragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/leftImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_sim_rain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemTitle"
            style="@style/TextTitle.ItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="top"
            app:layout_constraintBottom_toTopOf="@+id/itemContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/leftImg"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp"
            tools:text="Sim 1" />

        <TextView
            android:id="@+id/itemContent"
            style="@style/ItemContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/leftImg"
            app:layout_constraintTop_toBottomOf="@+id/itemTitle"
            tools:layout_editor_absoluteX="8dp"
            tools:text="No spend limit set as pay as you use No spend limit set as pay as you use" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
